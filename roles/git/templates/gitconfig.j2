[user]
  name = {{ username | mandatory }}
  email = {{ email | mandatory }}
{% if signingkey %}
  signingkey = {{ signingkey }}
{% endif %}

[core]
  editor = vim

[alias]
  st = status
  di = diff
  ds = diff --staged
  co = checkout
  ci = commit
  dci = duet-commit
  br = branch
  praise = blame
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  drb = rebase -i --exec 'git duet-commit --no-edit --amend --reset-author'

[pull]
  rebase = true

[merge]
  ff = only

[commit]
  verbose = true
{% if signingkey %}
  gpgsign = true
{% endif %}
